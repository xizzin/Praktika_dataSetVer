<Window x:Class="prOneDataSetVer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prOneDataSetVer"
        mc:Ignorable="d"
        Loaded= "DoAfterLoad"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BooksMainGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Books_ID}"/>
                <DataGridTextColumn Binding="{Binding Books_name}" Header="Название произведения"/>
                <DataGridTextColumn Binding="{Binding Authors_ID}"/>
                <DataGridTextColumn Binding="{Binding Genres_ID}"/>
                <DataGridTextColumn Binding="{Binding Genre_name}" Header="Жанр произведения"/>
                <DataGridTextColumn Binding="{Binding Column1}" Header="Автор/авторка произведения"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
